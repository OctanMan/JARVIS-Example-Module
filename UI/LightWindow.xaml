<Window x:Class="ExampleJARVIS.LightWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="100"
        Width="180" Height="150" Title="Light">
    <Window.Resources>
        <BitmapImage x:Key="LightOnImg" UriSource="../Resources/LightOn.png" />
        <BitmapImage x:Key="LightOffImg" UriSource="../Resources/LightOff.png" />
    </Window.Resources>
    <Grid>
        <Image x:Name="OnImg" Source="{StaticResource LightOnImg}" Visibility="Collapsed" />
        <Image x:Name="OffImg" Source="{StaticResource LightOffImg}" Visibility="Visible"/>
    </Grid>
</Window>
